<div class="items-sell-contents">
  <header class="items-sell-header">
    <%= link_to image_tag('mybrary-logo.png' , size: '185x50'), "/" %>

  </header>
  <div class="items-sell-main">
    <h2 class="items-sell-title">本の情報を入力</h2>
    <%= form_with(model:@item, local: true) do |f| %> 

    
    <% render 'shared/error_messages', model: f.object %>
    

    <%# 出品画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>
    <%# /出品画像 %>
    <%# 商品名と商品説明 %>
    <div class="new-items">
      <div class="weight-bold-text">
        商品名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :item_name, class:"items-text", id:"item-name", placeholder:"本のタイトル", maxlength:"40" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          概要 あらすじ
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :info, class:"items-text", id:"item-info", placeholder:"読む価値ありの一冊です" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
    <%# /商品名と商品説明 %>

    <%# 商品の詳細 %>
    <div class="items-detail">
      <div class="weight-bold-text"></div>
      <div class="form">
        <div class="weight-bold-text">
          ジャンル
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:category_id,  Category.all, :id, :name, {class:"select-box", id:"item-category"}) %>
        <div class="weight-bold-text">
          目的
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:second_category_id,  SecondCategory.all, :id, :name, {class:"select-box", id:"item-category"}) %>
      </div>
    </div>
    <%# /商品の詳細 %>

  

    <%# 販売価格 %>
    <div class="sell-price">
      <div class="weight-bold-text question-text">
        <span></span>
       
      </div>
      <div>
        <div class="price-content">
          <div class="price-text">
            <span>作者</span>
            <span class="indispensable">必須</span>
          </div>
          <span class="sell-yen"></span>
          <%= f.text_field :authr, class:"price-input", id:"item-price", placeholder:"例）山田　太郎" %>
        </div>
        <div class="price-content">
          <div class="price-text">
            <span>評価</span>
            <span class="indispensable">必須</span>
          </div>
          <span class="sell-yen"></span>
          <%= f.text_field :valuation, class:"price-input", id:"item-price", placeholder:"100点満点中" %>
        </div>
      </div>
    </div>
    <%# /販売価格 %>

    <%# 注意書き %>
    <div class="caution">
      
      <p class="sentence">
        本の画像を載せる際は表紙を写してください
        <a>中身の転載</a>
        は著作権侵害であり処罰される可能性があります。
      </p>
      
    </div>
    <%# /注意書き %>
    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "紹介する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>

  
</div>